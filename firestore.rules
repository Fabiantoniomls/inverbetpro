
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read and write their own settings
    match /userSettings/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own bets
    match /bets/{betId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow users to read and write their own saved analyses and their versions
    match /savedAnalyses/{analysisId} {
      allow read, delete, create: if request.auth != null && request.auth.uid == resource.data.userId;

      // Rules for the 'versions' subcollection
      match /versions/{versionId} {
        allow read, write, create: if request.auth != null && get(/databases/$(database)/documents/savedAnalyses/$(analysisId)).data.userId == request.auth.uid;
      }
    }
    
  }
}
